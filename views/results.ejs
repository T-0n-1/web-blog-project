<%- include("partials/header.ejs") %>
<%- include("partials/navi.ejs") %>

<div class="container">
  <h1>Search Results</h1>
  <% if (results.length === 0) { %>
    <p>No results found.</p>
  <% } else { %>
    <% results.forEach(result => { %>
      <div class="card my-3">
        <div class="card-body">
          <h5 class="card-title"><%= result.title %></h5>
          <p class="card-text">
            <strong>Hits:</strong> <%= result.hits.join(', ') %><br>
            <strong>Misses:</strong> <%= result.misses.join(', ') %>
          </p>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

