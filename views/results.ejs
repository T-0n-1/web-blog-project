<%- include("partials/header.ejs") %>
<%- include("partials/navi.ejs") %>

<div class="container mt-5">
  <h1>Search Results</h1>
  <% if ( results.every(result => result.hitsCount === 0) ) { %>
    <p class="lead display-6">No results found.</p>
  <% } else { %>
    <% results.forEach(result => { %>
      <div class="mb-2">
        <p class="m-0 p-0 display-11"><strong>Post title:&nbsp;<%= result.title %></strong></p>
        <p class="m-0 p-0">Words found in post: <%= result.hits.join(', ') %></p>
        <% if (result.missesCount !== 0) { %>
          <p class="m-0 p-0">Words not found in post: <%= result.misses.join(', ') %></p>
        <% } %>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include("partials/footer.ejs") %>